  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Mocha tests",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/node_modules/.bin/_mocha",
      "stopOnEntry": false,
      "args": [
        "-t",
        "100000",
        "-R",
        "dot",
        "--exit",
        "test/**/*.js"
      ],
      "cwd": "${workspaceRoot}",
      "env": {
        "NODE_ENV": "testing"
      },
      "internalConsoleOptions": "openOnSessionStart"
    }
  ]
}
